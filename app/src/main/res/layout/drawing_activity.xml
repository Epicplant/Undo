<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cse340.undo.app.AbstractDrawingActivity"
    android:clipChildren="false"
    android:clipToPadding="false">

    <cse340.undo.app.DrawingView
        android:id="@+id/draw"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <cse340.undo.app.CircleColorPickerView
            android:id="@+id/Circle_Color_Picker_View"
            android:layout_width="203dp"
            android:layout_height="203dp"
            android:focusable="false"
            android:visibility="invisible"
            android:contentDescription="Color Picker Wheel"
            android:elevation="2dp">
        </cse340.undo.app.CircleColorPickerView>
    </cse340.undo.app.DrawingView>


</android.support.constraint.ConstraintLayout>